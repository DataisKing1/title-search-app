# Title Search Application Environment Variables

# Application
APP_NAME="Title Search Application"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API
API_PREFIX=/api
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/title_search
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Authentication - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./storage

# S3/MinIO (optional)
# S3_BUCKET=title-search-documents
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_ENDPOINT=http://localhost:9000
# S3_REGION=us-east-1

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4-turbo-preview

# OCR
# TESSERACT_CMD=/usr/bin/tesseract

# Browser Automation
BROWSER_HEADLESS=true
BROWSER_POOL_SIZE=5
BROWSER_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Reports
REPORTS_FOLDER=./reports

# Admin Account (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=
